generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// AUTH MODELS (NextAuth Prisma Adapter)
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?   // For credentials auth
  
  // Gamification
  xp            Int       @default(0)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts          Account[]
  sessions          Session[]
  lessonProgress    UserLessonProgress[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// LESSON MODELS (Level 0 MVP)
// ============================================

model Lesson {
  id          String   @id // e.g. "level-0-lesson-1-board"
  slug        String   @unique
  title       String
  order       Int      // Ordering within level
  pieceType   String   // "Board", "Rook", "Bishop", etc.
  introText   String   @db.Text // 3-sentence explanation
  xpReward    Int      @default(15)

  tasks       Task[]
  userProgress UserLessonProgress[]

  @@index([order])
}

model Task {
  id              Int      @id @default(autoincrement())
  lessonId        String
  lesson          Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  index           Int      // 1, 2, 3 within lesson
  instruction     String   @db.Text

  startingFen     String   // FEN for this task's board state
  
  goalType        String   // "move" | "capture" | "select"
  targetSquare    String   // e.g. "e8" - the goal square
  startSquare     String?  // e.g. "e1" - where the piece starts (for move tasks)
  
  validMoves      String   // JSON array of valid moves, e.g. ["e1-e2", "e1-e3"]
  
  successMessage  String   @db.Text
  failureDefault  String   @db.Text
  failureSpecific String?  @db.Text // JSON map for specific wrong moves, e.g. {"e1-h4": "Rooks can't move diagonally!"}
  hintMessage     String   @db.Text

  @@unique([lessonId, index])
  @@index([lessonId])
}

model UserLessonProgress {
  id        String   @id @default(cuid())
  userId    String
  lessonId  String
  
  status    LessonStatus @default(LOCKED)
  hintsUsed Int          @default(0)
  data      Json?        // JSONB for flexible progress tracking
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@index([userId, lessonId])  // Composite index for fast lookups
}

enum LessonStatus {
  LOCKED
  AVAILABLE
  COMPLETED
}
