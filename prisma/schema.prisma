generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model AiPromptTemplate {
  id        String   @id
  role      String
  name      String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([role])
}

model ArticleIdea {
  id            String        @id
  title         String
  slug          String?
  targetKeyword String?
  archetype     String?
  status        ArticleStatus @default(DRAFT)
  notes         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime

  @@index([status])
}

model Feedback {
  id        String   @id
  userId    String
  category  String   @default("general")
  text      String
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Lesson {
  id        String @id
  slug      String @unique
  title     String
  order     Int
  pieceType String
  introText String
  xpReward  Int    @default(15)
  Task      Task[]

  @@index([order])
}

model SeoKeyword {
  id        String   @id
  phrase    String   @unique
  intent    String?
  archetype String?
  notes     String?
  priority  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([priority])
}

model SeoPage {
  id            String   @id
  slug          String   @unique
  title         String
  description   String
  ogTitle       String?
  ogDescription String?
  updatedAt     DateTime
  createdAt     DateTime @default(now())

  @@index([slug])
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Task {
  id              Int     @id @default(autoincrement())
  lessonId        String
  index           Int
  instruction     String
  startingFen     String
  goalType        String
  targetSquare    String
  startSquare     String?
  validMoves      String
  successMessage  String
  failureDefault  String
  failureSpecific String?
  hintMessage     String
  Lesson          Lesson  @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([lessonId, index])
  @@index([lessonId])
}

model User {
  id                 String               @id
  name               String?
  email              String               @unique
  emailVerified      DateTime?
  image              String?
  passwordHash       String?
  xp                 Int                  @default(0)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime
  feedbackGiven      Boolean              @default(false)
  lastActiveAt       DateTime?
  sessionCount       Int                  @default(0)
  role               String               @default("USER")
  Account            Account[]
  Feedback           Feedback[]
  Session            Session[]
  UserLessonProgress UserLessonProgress[]
}

model UserLessonProgress {
  id          String   @id
  userId      String
  lessonSlug  String
  completedAt DateTime @default(now())
  hintsUsed   Int      @default(0)
  User        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonSlug])
  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum ArticleStatus {
  DRAFT
  OUTLINED
  WRITING
  LIVE
}
